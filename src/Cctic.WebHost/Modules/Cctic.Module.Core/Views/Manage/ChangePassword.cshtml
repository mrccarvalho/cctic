@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}
<section class="page-header">
    <div class="container">



        <h1>@ViewData["Title"]</h1>

        <!-- breadcrumbs -->
        <ol class="breadcrumb">
            <li><a href="~/">Home</a></li>
            <li><span class="active">@ViewData["Title"]</span></li>
        </ol><!-- /breadcrumbs -->

    </div>
</section>
<!-- /PAGE HEADER -->
<div class="container">
    <div class="mt-40">
        <div class="row">
            <div class="col-md-3">
                @Html.Partial("_AccountMenu")
            </div>
            <div class="col-md-9">
                <form asp-controller="Manage" asp-action="ChangePassword" method="post" class="form-horizontal">
                    <h2>Change Password Form</h2>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="OldPassword" class="col-md-4 control-label"></label>
                        <div class="col-md-6">
                            <input asp-for="OldPassword" class="form-control" />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="col-md-4 control-label"></label>
                        <div class="col-md-6">
                            <input asp-for="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="col-md-4 control-label"></label>
                        <div class="col-md-6">
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-6">
                            <button type="submit" class="btn btn-primary">Change password</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
